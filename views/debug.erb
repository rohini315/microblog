<h2>ALL USERS</h2>
<% @users.each  do |user| %>
	<%= user.id %> 
	<%= user.username %>    
	<%= user.password %>  
	<%= user.name %>  
	<%= user.phone %><br/>
<% end %>

<h2>USER's POST</h2>

<%@user.posts.each do |post|%>
	<%= post.user_id %> 
	<%= post.post_text %>    
	<%= post.date %> <br/>
<%end%>

